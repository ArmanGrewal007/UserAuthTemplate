<h1> Sign Up </h1>
<!-- sign_up or sign_up_path coz then we can use post "sign_up", to: "registrations#create" in routes.rb else we will have to use post "users", to: "registrations#create" in routes.rb  -->
<%= form_with model:@new_user, url:sign_up_path do |form| %>
    <!-- Display errors on top if any -->
    <% if form.object.errors.any? %>
        <div class="alert alert-danger">
            <!-- Print each error message, inside a div -->
            <% form.object.errors.full_messages.each do |message| %>
               <div> <%= message %> </div> 
            <% end %>
        </div>
    <% end %>
    <!-- 3 fields for email, password, and password confirmation -->
    <div class="mb-3">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", placeholder: "steve@email.com"%> 
    </div>
    <div class="mb-3">
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control", placeholder: "password"%> 
    </div>
    <div class="mb-3">
        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation, class: "form-control", placeholder: "password"%> 
    </div>
    <div class="mb-3">
        <!-- Default would be create user !!, coz model is user and method is create -->
        <%= form.submit "Sign Up", class: "btn btn-primary"%>
    </div>
<% end %>
