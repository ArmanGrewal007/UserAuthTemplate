<h1> Sign in </h1>

<%= form_with url:sign_in_path do |form| %>
    <!-- There is not form.object, so we cant do form.object.errors.any?
    Instead, we can push a flash[:alert], from SessionsController -->
    <!-- 2 fields for email, password and submit button -->
    <div class="mb-3">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", placeholder: "steve@email.com"%> 
    </div>
    <div class="mb-3">
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control", placeholder: "password"%>
        <%= link_to "Forgot password?", password_reset_path %> 
    </div>
    <div class="mb-3">
        <!-- Default would be create user !!, coz model is user and method is create -->
        <%= form.submit "Sign In", class: "btn btn-primary"%>
    </div>
<% end %>
